{
    "name": "responsive-sk/vite",
    "description": "Simple Vite integration for Slim 4 framework",
    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "keywords": ["slim", "slim4", "vite", "twig", "assets", "frontend"],
    "authors": [
        {
            "name": "Responsive SK",
            "email": "info@responsive.sk",
            "homepage": "https://responsive.sk"
        }
    ],
    "homepage": "https://github.com/responsive-sk/vite",
    "autoload": {
        "psr-4": {
            "ResponsiveSk\\Vite\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ResponsiveSk\\Vite\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4|^8.0",
        "responsive-sk/slim4-root": "^1.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4"
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit"
    },
    "support": {
        "issues": "https://github.com/responsive-sk/vite/issues",
        "source": "https://github.com/responsive-sk/vite"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
